<%= form_for(user) do |f| %>
<div class="s12 card card-large">

  <% if user.errors.any? %>
    <div id="error_explanation">
      <p><%= pluralize(user.errors.count, "erro") %> prohibited this user from being saved:</p>

      <ul class="error_messages">
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="input-field col s12">
      <i class="material-icons prefix">account_circle</i>
      <%= f.text_field :name,  id: 'name' %>
      <label for="name">Nome</label>
    </div>
    <div class="input-field col s12">
      <i class="material-icons prefix">email</i>
      <%= f.text_field :email, id: 'email' %>
      <label for="email">E-mail</label>
    </div>
    <div class="input-field col s12">
      <i class="material-icons prefix">map</i>

      <%= f.select :state, User.states.keys, prompt: 'Estado', label: false, id: 'state' %>
    </div>
  </div>

  <div class="card-action">
    <%= link_to 'Voltar', users_path  %>
    <% if @user.id.present? %>
      <%= link_to 'Excluir', user, class: 'danger-btn', method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
    <%= f.submit 'Salvar', class: 'right sucess-btn' %>

  </div>
</div>
<% end %>
