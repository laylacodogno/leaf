<!DOCTYPE html>
<html>
  <head>
    <title>Leaf</title>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag 'favicon.ico' %>


    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <ul id="nav-user" class="dropdown-content">
        <li><a href="#!">one</a></li>
        <li><a href="#!">two</a></li>
        <li class="divider"></li>
        <li><a href="#!">three</a></li>
      </ul>
      <nav class="nav-extended">
        <div class="nav-wrapper container nav-primary" >
          <a href="#" class="brand-logo"></a>
          <ul id="nav-mobile" class="right hide-on-med-and-down navbar-links">
            <li>
              <form class="row navbar-search">
                <div class="input-field col s12">
                  <input id="search" type="search" required>
                </div>
                <button class="btn-search" type="submit" name="action"></button>                
              </form>
            </li>
            <li>
              <a class="dropdown-button link-dropdown" href="#!" data-activates="nav-user"><i class="ic-user"></i></a>
            </li>
          </ul>
        </div>
      </nav>
    </header>
    <main>
      <%= yield %>
    </main>
  </body>
</html>
